<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ScheduleView.Wpf.Controls">

    <Style x:Key="MonthViewDayItemStyle" TargetType="{x:Type controls:MonthViewDayContainer}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <StackPanel Margin="0 10 0 0" HorizontalAlignment="Left">
                        <controls:AppointmentItem Width="100" Height="30" BorderThickness="1" BorderBrush="Black" Background="White"/>
                        <controls:AppointmentItem Width="100" Height="30" BorderThickness="1" BorderBrush="Black" Background="Green"/>
                        <controls:AppointmentItem Width="100" Height="30" BorderThickness="1" BorderBrush="Black" Background="Red"/>
                        <controls:AppointmentItem Width="100" Height="30" BorderThickness="1" BorderBrush="Black" Background="Blue"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style  TargetType="{x:Type controls:MonthViewDayContainer}" BasedOn="{StaticResource MonthViewDayItemStyle}" />
</ResourceDictionary>