<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ScheduleView.Wpf.Controls">

    <Style x:Key="MonthViewDayItemStyle" TargetType="{x:Type controls:MonthViewDayContainer}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="10" Height="10"></Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style  TargetType="{x:Type controls:MonthViewDayContainer}" BasedOn="{StaticResource MonthViewDayItemStyle}" />
</ResourceDictionary>